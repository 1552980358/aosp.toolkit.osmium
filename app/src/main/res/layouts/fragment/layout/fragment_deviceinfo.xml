<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.earth.OsToolkit.view.DeviceInfoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/generalRoot"
                app:title="@string/deviceinfo_general_title" />

            <com.earth.OsToolkit.view.DeviceInfoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/androidRoot"
                app:title="@string/deviceinfo_android_title"/>

            <com.earth.OsToolkit.view.DeviceInfoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/socRoot"
                app:title="@string/deviceinfo_soc_title"/>

            <com.earth.OsToolkit.view.DeviceInfoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ramRoot"
                app:title="@string/deviceinfo_ram_title"/>

            <com.earth.OsToolkit.view.DeviceInfoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jvmRoot"
                app:title="@string/deviceinfo_jvm_title"/>

        </LinearLayout >
    </ScrollView >

</LinearLayout >