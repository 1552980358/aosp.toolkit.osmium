<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<com.earth.OsToolkit.Items.DeviceInfoCardView
			android:id="@+id/deviceinfo_general"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<com.earth.OsToolkit.Items.DeviceInfoCardView
			android:id="@+id/deviceinfo_android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<com.earth.OsToolkit.Items.DeviceInfoCardView
			android:id="@+id/deviceinfo_soc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<com.earth.OsToolkit.Items.DeviceInfoCardView
			android:id="@+id/deviceinfo_ram"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<com.earth.OsToolkit.Items.DeviceInfoCardView
			android:id="@+id/deviceinfo_runtime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>


</ScrollView>